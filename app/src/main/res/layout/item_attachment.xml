<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/img_bg_attach"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_bg_tint_attach"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_icon_attach"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@color/chatBg"
        app:layout_constraintBottom_toBottomOf="@+id/img_bg_attach"
        app:layout_constraintEnd_toEndOf="@+id/img_bg_attach"
        app:layout_constraintStart_toStartOf="@+id/img_bg_attach"
        app:layout_constraintTop_toTopOf="@+id/img_bg_attach" />

    <TextView
        android:id="@+id/tx_attach_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/img_icon_attach"
        app:layout_constraintStart_toStartOf="@+id/img_icon_attach"
        app:layout_constraintTop_toBottomOf="@+id/img_icon_attach" />

</androidx.constraintlayout.widget.ConstraintLayout>